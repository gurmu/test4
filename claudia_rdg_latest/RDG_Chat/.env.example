# ============================================================================
# Azure GCC Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
#
# WARNING: NEVER commit the .env file to source control!
# ============================================================================

# ============================================================================
# Azure GCC Identity / Authority
# ============================================================================
# GCC authority host for managed identity and AAD
AZURE_AUTHORITY_HOST=https://login.microsoftonline.us

# ============================================================================
# Azure OpenAI (Foundry Model)
# ============================================================================
# Azure OpenAI endpoint (GCC)
AZURE_OPENAI_ENDPOINT=https://itsmhub.openai.azure.us/

# Model deployment name
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# API version supported by your Azure OpenAI resource
AZURE_OPENAI_API_VERSION=2024-10-01-preview

# Azure OpenAI API Key (GCC)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key

# Embedding deployment name (e.g., text-embedding-3-small or text-embedding-3-large)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# ============================================================================
# Azure AI Search
# ============================================================================
# Azure AI Search endpoint (GCC)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.azure.us/

# Single ITSM index name (Azure Vision 1024D embeddings)
AZURE_SEARCH_INDEX=itsm-indexv2

# Azure AI Search API Key
AZURE_SEARCH_KEY=your-search-api-key

# Content field name in your index
KB_CONTENT_FIELD=content

# Semantic configuration name (if enabled)
KB_SEMANTIC_CONFIG=itsm

# Number of KB chunks to retrieve
KB_TOP_K=5

# ============================================================================
# Azure Computer Vision (Multimodal Embeddings)
# ============================================================================
# Azure Vision endpoint (GCC) - used for vectorizeText / vectorizeImage
AZURE_VISION_ENDPOINT=https://rdgvision.cognitiveservices.azure.us

# Azure Vision API Key
AZURE_VISION_KEY=your-vision-api-key

# ============================================================================
# Cosmos DB (Chat History)
# ============================================================================
COSMOSDB_ENDPOINT=https://your-cosmos-account.documents.azure.us
COSMOSDB_KEY=your-cosmos-key
COSMOSDB_DATABASE=itsm-chat
COSMOSDB_CONTAINER=history

# ============================================================================
# Microsoft Teams Bot Configuration
# ============================================================================
MICROSOFT_APP_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
MICROSOFT_APP_PASSWORD=

# Bot Type (recommended: User-Assigned Managed Identity)
BOT_TYPE=User-Assigned Managed Identity

# App MSI Resource ID (for user-assigned managed identity)
APP_MSI_RESOURCE_ID=/subscriptions/<sub>/resourceGroups/<rg>/providers/Microsoft.ManagedIdentity/userAssignedIdentities/<name>

# GCC Bot Framework endpoints
BOT_FRAMEWORK_CHANNEL_SERVICE=https://botframework.azure.us
BOT_FRAMEWORK_OAUTH_URL=https://login.microsoftonline.us/botframework/v1/.well-known/openidconfiguration

# ============================================================================
# API Endpoints (Internal Service Communication)
# ============================================================================
IVANTI_API_URL=http://ivanti-api:8000
NICE_API_URL=http://nice-api:8001

# ============================================================================
# Azure Deployment Configuration (Optional - for deployment scripts)
# ============================================================================
ACR_NAME=your-corporate-acr-name
RESOURCE_GROUP=rg-itsm-multiagent-prod
LOCATION=usgovvirginia
APP_SERVICE_PLAN=asp-itsm-multiagent
WEBAPP_NAME=itsm-multiagent-bot
APP_SERVICE_SKU=B1
AZURE_SUBSCRIPTION_ID=your-subscription-id
USER_ASSIGNED_IDENTITY_ID=/subscriptions/<sub>/resourceGroups/<rg>/providers/Microsoft.ManagedIdentity/userAssignedIdentities/<name>
USE_ACR_ADMIN_CREDENTIALS=false

# ============================================================================
# Additional Configuration (Optional)
# ============================================================================
# LOG_LEVEL=INFO
# ENABLE_TRACING=false

# ============================================================================
# Validation Checklist
# ============================================================================
# [ ] AZURE_AUTHORITY_HOST
# [ ] AZURE_OPENAI_ENDPOINT
# [ ] AZURE_OPENAI_DEPLOYMENT
# [ ] AZURE_OPENAI_API_VERSION
# [ ] AZURE_SEARCH_ENDPOINT
# [ ] AZURE_SEARCH_INDEX
# [ ] AZURE_VISION_ENDPOINT
# [ ] AZURE_VISION_KEY
# [ ] MICROSOFT_APP_ID
# [ ] MICROSOFT_APP_PASSWORD
# [ ] ACR_NAME (if deploying to Azure)
# [ ] RESOURCE_GROUP (if deploying to Azure)
# [ ] LOCATION (if deploying to Azure)
